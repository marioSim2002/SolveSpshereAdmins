<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<HBox spacing="15" style="-fx-padding: 10px; -fx-border-color: #ddd; -fx-border-radius: 5px;"
      xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.solvesphereadmins.Controllers.ProblemItemController">

    <VBox spacing="5">
        <Label fx:id="titleLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <Label fx:id="categoryLabel" style="-fx-font-size: 12px;"/>
        <Label fx:id="createdAtLabel" style="-fx-font-size: 12px; -fx-text-fill: gray;"/>
    </VBox>
    <Label fx:id="reportsStat" visible="false" style="-fx-text-fill: red;"/>
    <Button text="Delete" fx:id="deleteButton" onAction="#handleDeleteProblem" style="-fx-text-fill: red;"/>
    <Button text="Open Details" fx:id="openBt" onAction="#openProblemDetails" style="-fx-text-fill: green;"/>

</HBox>
